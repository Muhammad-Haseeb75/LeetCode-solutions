class Solution {
public:
    int lengthOfLongestSubstring(string str) {
        int ans = 0 , l=0 , r = 0;
        unordered_set<char>s;
        while (r < str.size()) {
         if (s.find(str[r]) == s.end()) {
            s.insert(str[r]);
            ans = max(ans , r-l+1);
            r++;
         } else {
            
            s.erase(str[l]);
            l++;  
           }
         }
        
        return ans;
    }
};
